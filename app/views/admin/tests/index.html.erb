<div class="row justify-content-center mt-3">
  <div class="col">
    <h1><%= t('.header') %></h1>

    <p>
      <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary" %>
    </p>
    <div class="table-responsive">
      <table class="table table-light table-striped mt-3">
        <tr>
        	<th>
          <th class="sort-by-title pointer">
				    <%= t('tests.index.title') %>
				    <%= octicon 'arrow-up', class: 'text-success hide' %>
				    <%= octicon 'arrow-down', class: 'text-success hide' %>
				  </th>
          <th><%= t('.level') %></th>
          <th><%= t('.category_id') %></th>
          <th><%= t('.questions_count') %></th>
          <th colspan="3"><%= t('.actions') %></th>
        </tr>

        <%= render @tests.published %>
      </table>
    </div>
  </div>
</div>
